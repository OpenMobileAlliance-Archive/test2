{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Decide what version of the JSON schema should be ponting to",
    "id": "http://www.openmobilealliance.org/tech/profiles/oma_ddf_library_schema.json",
    "title": "OMA Specifications Library",
    "description": "This JSON schema describes the metadata and structure or OMA Specifications Library",
    "default":"default_value", 
    "type": "object",
    "properties": {
      "organization": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "abbreviation": { "type": "string" },
          "schemaVersion": { "type": "string" },
          "url": {
            "type": "string",
            "format":"uri"
          },
          "about": { "type": "string" },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "required": [ "name", "abbreviation", "schemaVersion", "url", "about", "email" ]
      },
      "projects": {
        "type": "array",
        "uniqueItems": true,
        "items": [
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "abbreviation": { "type": "string" },
              "description": { "type": "string" },
              "resources": {
                "type": "array",
                "uniqueItems": true,
                "items": [ {                    
                    "type": "object",
                    "minItems": 1,
                    "uniqueItems": true,
                    "properties": {
                      "resourceType": { "type": "string",
                      "enum":["Logo", "Issues", "Registry", "Editor", "Overview", "MD2HTML", "Dependency", null ]
                      },
                      "name": { "type": "string" },
                      "url": {
                        "type": "string",
                        "format":"uri"
                      }
                    }
                  }
                ]
              },
              "tags": {
                "type": "array",
                "uniqueItems": true,
                "items": [
                  { "type": "string" }
                ]
              },
              "versions": {
                "type": "array",
                "uniqueItems": true,
                "items": [ {
                    "type": "object",
                    "properties": {
                      "version": { "type": "string" },
                      "publication_date": {
                        "$ref": "#/definitions/date",
                        "required": [ "year","month", "day" ] 
                       },
                      "status": {
                        "type": "string",
                        "enum":["Draft", "Candidate", "Approved", "Historic"] 
                       },
                      "updatedDate": { 
                        "$ref": "#/definitions/date",
                        "required": [ "year", "month" ] 
                       },
                      "tags": {
                         "type": "array",
                         "uniqueItems": true,
                         "items": [ { "type": "string" } ] 
                        },
                      "publishedContents": 
                        {
                            "type": "array",
                            "uniqueItems": true,
                            "items": [
                              {
                                "type": "object",
                                "properties": {
                                  "contentMediaType": { "type": "string" },
                                  "functionalArea": { "type": "string" },
                                  "title": { "type": "string" },
                                  "status": {
                                    "type": "string",
                                    "enum":["Draft", "Candidate", "Approved", "Historic"]
                                  },
                                  "version": { "type": "string" },
                                  "contentDate": { "$ref": "#/definitions/date",
                                    "required": [ "year", "month", "day" ] 
                                  },
                                  "file_name": { "type": "string" },
                                  "url": {
                                    "type": "string",
                                    "format":"uri"
                                  },
                                  "abstract": { "type": "string" },
                                  "tags": {
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": [
                                      { "type": "string" }
                                    ]
                                  }
                                },
                                "required": [ "contentMediaType", "funcionalArea", "title", "status", "version", "contentDate", "fileName", "url"
                                ]
                              }
                            ]
                          }
                    },
                    "required": [ "version", "publicationDate", "status"
                    ]
                  }
                ]
              }
            },
            "required": [ "name", "description" ]
          }
        ]
      }
    },
    "required": [ "organization", "projects" ],
    "definitions": {
          "date": {
          "type": "object",
          "properties": {
            "year": { "type": "string", "pattern": "^[0-9]{4}$" },
            "month":{ "type": "string", "pattern": "^[1-12]{2}$" },
            "date": { "type": "string", "pattern": "^[1-31]{2}$" }
          }
      }
    }
  }
  