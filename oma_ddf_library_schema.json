{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://www.",
    "title": "OMA Specifications Library",
    "description": "This JSON schema describes the metadata and structure or OMA Specifications Library",
    "type": "object",
    "properties": {
      "organization": {
        "type": "object",
        "properties": {
          "publisher": {
            "type": "string"
          },
          "abbr": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format":"uri"
          },
          "about": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "required": [
          "publisher",
          "version",
          "url",
          "about",
          "email"
        ]
      },
      "publications": {
        "type": "array",
        "uniqueItems": true,
        "items": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "abbr": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "resources": {
                "type": "array",
                "uniqueItems": true,
                "items": [
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string"
                      },
                      "url": {
                        "type": "string",
                        "format":"uri"
                      },
                      "icon": {
                        "type": "string",
                        "format":"uri"
                      }
                    },
                    "minItems": 1,
                    "uniqueItems": true
                  }
                ]
              },
              "linked": {
                "type": "array",
                "uniqueItems": true,
                "items": [
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "url": {
                        "type": "string",
                        "format":"uri"
                      }
                    }
                  }
                ]
              },
              "tags": {
                "type": "array",
                "uniqueItems": true,
                "items": [
                  {
                    "type": "string"
                  }
                ]
              },
              "versions": {
                "type": "array",
                "uniqueItems": true,
                "items": [
                  {
                    "type": "object",
                    "properties": {
                      "version": {
                        "type": "string"
                      },
                      "publication_date": {
                        "type": "object",
                        "properties": {
                          "year": {
                            "type": "string",
                            "pattern": "^[0-9]{4}$"
                          },
                          "month": {
                            "type": "string",
                            "pattern": "^[1-12]{2}$"
                          },
                          "day": {
                            "type": "string",
                            "pattern": "^[1-31]{2}$"
                          }
                        },
                        "required": [
                          "year",
                          "month",
                          "day"
                        ]
                      },
                      "status": {
                        "type": "string",
                        "enum":["Draft", "Candidate", "Approved", "Historic"]
                      },
                      "updated_date": {
                        "type": "object",
                        "properties": {
                          "year": {
                            "type": "string"
                          },
                          "month": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "year",
                          "month"
                        ]
                      },
                      "tags": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": [
                          {
                            "type": "string"
                          }
                        ]
                      },
                      "documents": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": [
                          {
                            "type": "object",
                            "properties": {
                              "mime_type": {
                                "type": "string"
                              },
                              "func_area": {
                                "type": "string"
                              },
                              "title": {
                                "type": "string"
                              },
                              "status": {
                                "type": "string",
                                "enum":["Draft", "Candidate", "Approved", "Historic"]
                              },
                              "version": {
                                "type": "string"
                              },
                              "date": {
                                "type": "object",
                                "properties": {
                                  "year": {
                                    "type": "string",
                                    "pattern": "^[0-9]{4}$"
                                  },
                                  "month": {
                                    "type": "string",
                                    "pattern": "^[1-2]{2}$"
                                  },
                                  "day": {
                                    "type": "string",
                                    "pattern": "^[1-31]{2}$"
                                  }
                                },
                                "required": [
                                  "year",
                                  "month",
                                  "day"
                                ]
                              },
                              "file_name": {
                                "type": "string"
                              },
                              "url": {
                                "type": "string",
                                "format":"uri"
                              },
                              "abstract": {
                                "type": "string"
                              },
                              "tags": {
                                "type": "array",
                                "uniqueItems": true,
                                "items": [
                                  {
                                    "type": "string"
                                  },
                                  {
                                    "type": "string"
                                  },
                                  {
                                    "type": "string"
                                  },
                                  {
                                    "type": "string"
                                  },
                                  {
                                    "type": "string"
                                  }
                                ]
                              }
                            },
                            "required": [
                              "mime_type",
                              "func_area",
                              "title",
                              "status",
                              "version",
                              "date",
                              "file_name",
                              "url"
                            ]
                          }
                        ]
                      }
                    },
                    "required": [
                      "version",
                      "publication_date",
                      "status"
                    ]
                  }
                ]
              }
            },
            "required": [
              "name",
              "description"
            ]
          }
        ]
      }
    },
    "required": [
      "organization",
      "publications"
    ]
  }